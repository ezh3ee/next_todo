generator client {
  provider   = "prisma-client"
  output     = "../app/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id   String  @id @default(uuid()) @db.Uuid
  text String
  done Boolean @default(false)
}

model User {
  id       String  @id @default(uuid()) @db.Uuid
  name     String
  email    String  @unique
  password String?
}
